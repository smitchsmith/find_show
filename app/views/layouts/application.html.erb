<!DOCTYPE html>
<html>
  <head>
    <title>findshow</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <header>
        <div class="grid">
          <div class="cell -6of12">
            <h1><%= link_to (content_for?(:header_title) ? content_for(:header_title) : "findshow"), welcome_path %></h1>
          </div>
          <div class="cell -6of12">
            <% if user_signed_in? %>
              <%= link_to image_tag(:hamburger, class: :settings), current_user_path %>
            <% end %>
          </div>
        </div>
      </header>

      <%= yield %>
    </div>
  </body>
</html>
